<Window x:Class="KinectSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectSender"
        mc:Ignorable="d"
        Title="Kinect Sender" 
        Height="768" Width="1024"
        Loaded="MainWindow_Loaded" 
        Closing="MainWindow_Closing">
    <Grid Margin="10 0 10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Image x:Name="ColorDisplay" Grid.Row="0" HorizontalAlignment="Center" Stretch="UniformToFill"/>
        <Image x:Name="BodyDisplay" Grid.Row="0" HorizontalAlignment="Center" Stretch="UniformToFill"/>
        <CheckBox Name="colorChkBox" Grid.Row="1" Content="Hide Color" FontSize="14" Checked="Toggle_Color" Unchecked="Toggle_Color" VerticalAlignment="Center" />
    </Grid>
</Window>
